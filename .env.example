# Environment Configuration
NODE_ENV=development
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Google Gemini AI API Key (Required for AI functionality)
GEMINI_API_KEY=your_gemini_api_key_here

# Pinecone Configuration (if using Pinecone instead of FAISS)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment

# File Upload Configuration
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/

# Python Configuration
PYTHON_PATH=python
PYTHON_AI_PATH=./Google_Hackathon-AI/Google_Hackathon-AI/AI Code

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# SMS/Twilio Configuration (for phone OTP)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Database
DATABASE_URL="file:./dev.db"